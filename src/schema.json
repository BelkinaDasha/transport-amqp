{
  "type": "object",
  "properties": {
    "name": {
      "oneOf": [
        { "type": "string" },
        { "type": "number" }
      ]
    },
    "private": {
      "type": "boolean"
    },
    "exchange": {
      "type": "string"
    },
    "timeout": {
      "type": "integer"
    },
    "listen": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "connection": {
      "type": "object",
      "properties": {
        "host": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "required": [ "host", "port" ],
                    "properties": {
                      "host": {
                        "type": "string"
                      },
                      "port": {
                        "type": "integer"
                      }
                    }
                  }
                ]
              }
            }
          ]
        },
        "port": {
          "oneOf": [
            { "type": "string" },
            { "type": "integer" }
          ]
        },
        "login": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "vhost": {
          "type": "string"
        },
        "temporaryChannelTimeout": {
          "type": "number"
        },
        "heartbeat": {
          "type": "integer"
        },
        "reconnect": {
          "type": "boolean"
        },
        "reconnectDelayTime": {
          "type": "integer"
        },
        "hostRandom": {
          "type": "boolean"
        },
        "clientProperties": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string"
            },
            "platform": {
              "type": "string"
            },
            "product": {
              "type": "string"
            }
          }
        },
        "ssl": {
          "type": "boolean"
        },
        "sslOptions": {
          "type": "object"
        }
      }
    }
  }
}